@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="jumbotron">
        <h1>Welcome to Dashboard</h1>
        <p>You are successfully logged in!</p>
        <hr />
        
        <a href="@Url.Action("Profile", "Home")" class="btn btn-primary btn-lg">
            View My Profile
        </a>
        
        @if (User.FindFirst("userTypeId")?.Value == "3")
        {
            <a href="@Url.Action("Datas", "Home")" class="btn btn-info btn-lg">
                View All Users (Admin Only)
            </a>
        }
        
        <a href="@Url.Action("Logout", "Home")" class="btn btn-danger btn-lg">
            Logout
        </a>
    </div>
</div>